<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:background="@color/white"
    android:layout_height="70dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/chat_list_userimg"
        android:src="@drawable/ic_gray_profile"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용자명"
        android:fontFamily="@font/nanumsquarer"
        android:paddingLeft="16dp"
        android:textSize="16dp"
        android:id="@+id/chat_list_username"
        android:layout_toRightOf="@+id/chat_list_userimg"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:text="안녕하세요 짜리 아빠 김영빈입니다. 다음에 봐요~"
        android:fontFamily="@font/nanumsquarer"
        android:layout_marginTop="5dp"
        android:paddingLeft="16dp"
        android:textSize="12dp"
        android:id="@+id/chat_list_message"
        android:textColor="#979797"
        android:lineSpacingExtra="2dp"
        android:layout_below="@+id/chat_list_username"
        android:layout_toRightOf="@+id/chat_list_userimg"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1분 전"
        android:fontFamily="@font/sebanggothic"
        android:textSize="12dp"
        android:id="@+id/chat_list_time"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="#80979797"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_list_time"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_pink_new"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F8F8F7"
        android:padding="1dp"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>