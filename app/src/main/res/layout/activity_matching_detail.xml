<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MatchingDetailActivity">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:padding="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/sebanggothic"
            android:text="상책매칭 정보"
            android:textSize="20dp"></TextView>

        <Button
            android:id="@+id/btn_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_round"
            android:fontFamily="@font/sebanggothic"
            android:text="뒤로"
            android:textColor="#ffffff"></Button>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mainlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_layout">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="vertical">

            <RelativeLayout
                android:id="@+id/maininlinelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <fragment
                    android:id="@+id/matchinggeofragment"
                    class="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="400dp" />

                <TextView
                    android:id="@+id/matching_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/matchinggeofragment"
                    android:layout_margin="12dp"
                    android:fontFamily="@font/r210beachofnight"
                    android:maxLines="2"
                    android:text="매칭 제목이 들어가는 자리"
                    android:textColor="#00C09F"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

                <RelativeLayout
                    android:id="@+id/Writer_profile"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@+id/matching_title"
                    android:background="@drawable/edittext_round">

                    <ImageView
                        android:id="@+id/matching_profile_img"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_margin="8dp"
                        android:src="@drawable/selected_woman"></ImageView>

                    <TextView
                        android:id="@+id/matching_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_toRightOf="@+id/matching_profile_img"
                        android:fontFamily="@font/r210beachofnight"
                        android:text="글쓴이"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/matching_profile_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="12dp"
                        android:layout_toRightOf="@+id/matching_profile_img"
                        android:fontFamily="@font/r210beachofnight"
                        android:text="거주지"
                        android:textSize="16dp"></TextView>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/btnLayout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/Writer_profile"
                    android:layout_margin="16dp">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:textColor="#00C09F"
                        android:fontFamily="@font/r210beachofnight"
                        android:text="채팅하기"
                        android:background="@drawable/edittext_round"
                        android:id="@+id/btn_chatting"></Button>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:textColor="#00C09F"
                        android:fontFamily="@font/r210beachofnight"
                        android:text="채팅하기"
                        android:background="@drawable/edittext_round"
                        android:id="@+id/btn_participate"></Button>
                </LinearLayout>
                <com.google.android.material.tabs.TabLayout
                    android:layout_below="@+id/btnLayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:tabMode="fixed"
                    app:tabGravity="fill"
                    app:tabMaxWidth="0dp"
                    app:tabTextColor="#979797"
                    app:tabSelectedTextColor="#00C09F"
                    app:tabIndicatorColor="#00C09F"
                    android:id="@+id/matching_tab_layout">
                </com.google.android.material.tabs.TabLayout>
                <androidx.viewpager.widget.ViewPager
                    android:layout_below="@+id/matching_tab_layout"
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:id="@+id/matching_view_pager">

                </androidx.viewpager.widget.ViewPager>


            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>


</RelativeLayout>