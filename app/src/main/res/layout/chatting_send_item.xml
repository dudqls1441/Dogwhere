<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안녕하세요 ): 견종은 닥스훈트이고 나이는 4살 입니다.."
        android:textStyle="bold"
        android:fontFamily="@font/sebanggothic"
        android:textSize="15dp"
        android:background="@drawable/send_text_round"
        android:maxWidth="250dp"
        android:layout_margin="16dp"
        android:padding="12dp"
        android:layout_alignParentRight="true"
        android:id="@+id/chatting_send_text"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chatting_send_time"
        android:textSize="15dp"
        android:layout_toLeftOf="@+id/chatting_send_text"
        android:text="18:36"
        android:layout_alignBottom="@+id/chatting_send_text"
        android:fontFamily="@font/sebanggothic"></TextView>


</RelativeLayout>