<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안녕하세요 ): 견종은 닥스훈트이고 나이는 4살 입니다.."
        android:textStyle=""
        android:fontFamily="@font/nanumsquarer"
        android:textSize="12dp"
        android:background="@drawable/send_text_round"
        android:maxWidth="250dp"
        android:padding="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_alignParentRight="true"
        android:id="@+id/text_chatroom_sendmsg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_chatroom_sendtime"
        android:textSize="12dp"
        android:layout_marginEnd="5dp"
        android:layout_toLeftOf="@+id/text_chatroom_sendmsg"
        android:text="18:36"
        android:textColor="#80BCB4B4"
        android:layout_alignBottom="@+id/text_chatroom_sendmsg"
        android:fontFamily="@font/nanumsquarer"></TextView>


</RelativeLayout>