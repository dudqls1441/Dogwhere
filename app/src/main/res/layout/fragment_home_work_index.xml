<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeWorkIndexFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="#00C09F">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/workindex_title"
            android:text="오늘의 산책지수"
            android:textColor="#ffffff"
            android:fontFamily="@font/sebanggothic"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="14dp"
            android:textStyle="bold"
            android:textSize="18dp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인천시 부평구"
            android:fontFamily="@font/sebanggothic"
            android:textColor="#ffffff"
            android:id="@+id/area_text"
            android:layout_below="@+id/workindex_title"
            android:layout_marginLeft="20dp"
            android:textSize="12dp"></TextView>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/workindex_img"
            android:src="@drawable/selected_woman"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:layout_marginTop="80dp">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="산책지수"
            android:textSize="18dp"
            android:id="@+id/workindex_context"
            android:fontFamily="@font/sebanggothic"
            android:textColor="#ffffff"
            android:layout_below="@+id/workindex_img"
            android:layout_centerHorizontal="true"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:id="@+id/layout_state"
            android:background="#00C09F"
            android:gravity="center"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="6dp"
                android:src="@color/white"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="미세먼지"
                    android:fontFamily="@font/sebanggothic"
                    android:textColor="#ffffff"
                    android:textSize="14dp"
                    android:gravity="center"></TextView>
                <TextView
                    android:id="@+id/dust_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상태"
                    android:fontFamily="@font/sebanggothic"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:gravity="center"></TextView>
            </LinearLayout>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="6dp"
                android:src="@color/white"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="날씨"
                    android:fontFamily="@font/sebanggothic"
                    android:textColor="#ffffff"
                    android:textSize="14dp"
                    android:gravity="center"></TextView>
                <TextView
                    android:id="@+id/weather_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상태"
                    android:fontFamily="@font/sebanggothic"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:gravity="center"></TextView>
            </LinearLayout>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="6dp"
                android:src="@color/white"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="온도"
                    android:fontFamily="@font/sebanggothic"
                    android:textColor="#ffffff"
                    android:textSize="14dp"
                    android:gravity="center"></TextView>
                <TextView
                    android:id="@+id/temp_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상태"
                    android:fontFamily="@font/sebanggothic"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:gravity="center"></TextView>
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>





</FrameLayout>