<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".UserProfileActivity">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/activitytitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/r210beachofnight"
            android:text="유저 프로필"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="#878787"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/top_layout"
        android:id="@+id/layoutprofile">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/selected_woman"
            android:layout_margin="30dp"
            android:id="@+id/user_img"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유저이름"
            android:fontFamily="@font/r210beachofnight"
            android:textSize="25dp"
            android:layout_toRightOf="@+id/user_img"
            android:layout_marginTop="30dp"
            android:id="@+id/user_name"
            android:textStyle="bold"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_age"
            android:text="나이"
            android:fontFamily="@font/r210beachofnight"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/user_img"
            android:layout_below="@+id/user_name"
            android:layout_marginTop="10dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_age"
            android:text="유저 나이"
            android:fontFamily="@font/r210beachofnight"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/text_age"
            android:layout_below="@+id/user_name"
            android:layout_marginTop="10dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_sex"
            android:text="성별"
            android:fontFamily="@font/r210beachofnight"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/user_img"
            android:layout_below="@+id/user_age"
            android:layout_marginTop="10dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_sex"
            android:text="유저성별"
            android:fontFamily="@font/r210beachofnight"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/text_sex"
            android:layout_below="@+id/user_age"
            android:layout_marginTop="10dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_address"
            android:text="주소"
            android:fontFamily="@font/r210beachofnight"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/user_img"
            android:layout_below="@+id/user_sex"
            android:layout_marginTop="10dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_address"
            android:text="거주지"
            android:fontFamily="@font/r210beachofnight"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/text_sex"
            android:layout_below="@+id/user_sex"
            android:layout_marginTop="10dp"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:maxHeight="80dp"
            android:maxLines="200"
            android:layout_alignParentBottom="true"
            android:text="자기소개 자기소개 자기소개 자기소개 자기소개 자기소개 자기소개 자기소개 자기소개자기소개자기소개 자기소개 자기소개 자기소개 자기소개자기소개 자기소개 자기소개 자기소개 자기소개 "
            android:padding="10dp"
            android:textSize="15dp"
            android:fontFamily="@font/r210beachofnight"
            android:layout_below="@+id/user_img"></TextView>

    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:layout_below="@+id/layoutprofile"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabMaxWidth="0dp"
        app:tabTextColor="#979797"
        app:tabSelectedTextColor="#00C09F"
        app:tabIndicatorColor="#00C09F"
        android:id="@+id/profiletab_layout">

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:layout_below="@+id/profiletab_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/profileview_pager">

    </androidx.viewpager.widget.ViewPager>

</RelativeLayout>