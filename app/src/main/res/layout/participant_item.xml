<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/participant_userimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:src="@drawable/selected_woman"></ImageView>

        <TextView
            android:id="@+id/participant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/participant_userimg"
            android:fontFamily="@font/nanumsquareeb"
            android:paddingTop="12dp"
            android:text="부평 짜리형아"
            android:textSize="14dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/participant_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/participant_name"
            android:layout_toRightOf="@id/participant_userimg"
            android:fontFamily="@font/nanumsquareeb"
            android:paddingTop="4dp"
            android:text="인천시 부평구 청천동"
            android:textSize="10dp"
            android:textStyle="bold"></TextView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/participant_dog_img"
            android:layout_below="@+id/participant_userimg"
            android:src="@drawable/zzarri"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/participant_dogname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/participant_address"
            android:paddingLeft="50dp"
            android:paddingTop="100dp"
            android:text="짜리"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/participant_breed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/participant_dogname"
            android:paddingLeft="50dp"
            android:text="닥스훈트"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/participant_dogname"
            android:layout_toRightOf="@id/participant_breed"
            android:text=" | "
            android:textColor="@color/white"></TextView>

        <TextView
            android:id="@+id/participant_dogage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/participant_dogname"
            android:layout_toRightOf="@+id/line1"
            android:text="4개월"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/participant_dogsex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/participant_dogname"
            android:layout_toRightOf="@+id/line2"
            android:text="수컷"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/participant_dogname"
            android:layout_toRightOf="@id/participant_dogage"
            android:text=" | "
            android:textColor="@color/white"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/participant_dogname"
            android:paddingLeft="50dp"
            android:id="@+id/participant_dogne"
            android:text="중성화X"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold"></TextView>
    </RelativeLayout>

</RelativeLayout>