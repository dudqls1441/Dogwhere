<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Chatting_Room_Activity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:id="@+id/chatting_room_top"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft= "true"
            android:id="@+id/chatting_room_btn_back"
            android:background="@color/white"
            android:src="@drawable/ic_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sebanggothic"
            android:text="사용자 이름"
            android:id="@+id/chatting_room_other"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:textColor="@color/main_labelText"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight = "true"
            android:layout_marginTop="40dp"
            android:id="@+id/btn_add"
            android:background="@color/white"
            android:src="@drawable/ic_check"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/chatting_room_top"
        android:layout_above="@+id/chatting_room_bottom"
        android:id="@+id/chatting_room_recyclerview"></androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/chatting_room_bottom"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="img"
            android:layout_centerVertical="true"
            android:id="@+id/chatting_room_btn_img"
            android:layout_alignParentLeft="true">

        </Button>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/chatting_room_btn_img"
            android:layout_alignParentBottom="true"
            android:background="@drawable/edittext_round"
            android:layout_toLeftOf="@+id/chatting_room_btn_send"
            android:id="@+id/chatting_room_messagebox"
            ></EditText>
        <Button
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="전송"
            android:background="@drawable/btn_round"
            android:id="@+id/chatting_room_btn_send"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"></Button>
    </RelativeLayout>



</RelativeLayout>