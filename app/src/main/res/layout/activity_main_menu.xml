<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_drawer"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainMenuActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">



            <ImageView
                android:id="@+id/menuBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_g_hamburger"></ImageView>

            <ImageView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_splash"
                android:textColor="#BD3131"
                android:textStyle="bold"></ImageView>

            <ImageView
                android:id="@+id/btn_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_g_notice"></ImageView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_top"
            android:layout_above="@+id/bottom_bar"
            android:id="@+id/scrollLayout">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:fillViewport="true"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/InscrollLayout">

                    <RelativeLayout
                        android:id="@+id/layout_today_workIndex"
                        android:layout_width="match_parent"
                        android:layout_height="300dp">

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_today_hot_post"
                        android:layout_width="match_parent"
                        android:layout_marginTop="4dp"
                        android:padding="16dp"
                        android:layout_height="300dp"
                        android:layout_below="@+id/layout_today_workIndex">
                        <TextView
                            android:id="@+id/texttoday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="오늘의"
                            android:fontFamily="@font/sebanggothic"
                            android:textSize="20dp"></TextView>
                        <TextView
                            android:id="@+id/texthotpost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/texttoday"
                            android:text="핫 게시물"
                            android:textColor="#00C09F"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/sebanggothic"
                            android:textSize="20dp"></TextView>
                        
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerview_today_hot_post"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/texttoday"
                            android:paddingTop="8dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

                        </androidx.recyclerview.widget.RecyclerView>

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layout_recommendation_place"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_below="@+id/layout_today_hot_post"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="oo"
                            android:fontFamily="@font/sebanggothic"
                            android:id="@+id/recommendation_gu"></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:layout_toRightOf="@+id/recommendation_gu"
                            android:text="구"
                            android:fontFamily="@font/sebanggothic"
                            android:id="@+id/text_gu"></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="oo"
                            android:fontFamily="@font/sebanggothic"
                            android:layout_toRightOf="@+id/text_gu"
                            android:id="@+id/recommendation_dong"></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:layout_toRightOf="@+id/recommendation_dong"
                            android:text="동"
                            android:fontFamily="@font/sebanggothic"
                            android:id="@+id/text_dong"></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="산책 모임"
                            android:fontFamily="@font/sebanggothic"
                            android:id="@+id/text_work1"
                            android:layout_marginTop="8dp"
                            android:textSize="18dp"
                            android:textColor="#00C09F"
                            android:layout_below="@+id/recommendation_dong"></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textSize="18dp"
                            android:layout_below="@+id/recommendation_dong"
                            android:layout_toRightOf="@+id/text_work1"
                            android:text="에 방문해보세요"
                            android:fontFamily="@font/sebanggothic"></TextView>

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/text_work1"
                            android:fillViewport="true">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerview_recommendation_place"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingTop="8dp"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

                            </androidx.recyclerview.widget.RecyclerView>

                        </HorizontalScrollView>




                    </RelativeLayout>

                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/bottom_bar"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/layout_home"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="4dp"
                    android:id="@+id/text_home"
                    android:background="@drawable/bottomclickedbutton"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/btn_home"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/text_home"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="홈"
                    android:textColor="#00C09F"
                    android:textSize="14dp"></TextView>w

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/layout_work"
                android:layout_weight="1">
                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="4dp"
                    android:id="@+id/text_work"
                    android:background="@drawable/bottombutton"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/btn_work"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/text_work"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="산책"
                    android:textColor="#000000"
                    android:textSize="14dp"></TextView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/layout_matching"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="4dp"
                    android:id="@+id/text_matching"
                    android:background="@drawable/bottombutton"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/btn_matching"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/text_matching"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="매칭"
                    android:textColor="#000000"
                    android:textSize="14dp"></TextView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/layout_post"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="4dp"
                    android:id="@+id/text_post"
                    android:background="@drawable/bottombutton"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/btn_post"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/text_post"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="게시판"
                    android:textColor="#000000"
                    android:textSize="14dp"></TextView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/layout_chatting"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="4dp"
                    android:id="@+id/text_chatting"
                    android:background="@drawable/bottombutton"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/btn_chatting"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/text_chatting"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="채팅"
                    android:textColor="#000000"
                    android:textSize="14dp"></TextView>

            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/naviView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        app:headerLayout="@layout/navi_header"
        app:menu="@menu/drawer_navigation">

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>