<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/free_bbs_item"
    android:layout_height="90dp"
    android:background="@color/white"
    android:layout_marginTop="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp">

    <TextView
        android:id="@+id/free_bbs_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:autoSizeMaxTextSize="150dp"
        android:fontFamily="@font/nightl"
        android:text="게시판 제목"
        android:textColor="#DE443C3C"
        android:textSize="16dp"></TextView>

    <TextView
        android:id="@+id/free_bbs_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/free_bbs_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/nightr"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="300dp"
        android:text="게시판 내용입니다. 게시판 내용입니다."
        android:textColor="#80444443"
        android:textSize="12dp"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/free_bbs_img"
        android:layout_margin="4dp"
        android:layout_alignParentRight="true"></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0분 전"
        android:textSize="12dp"
        android:fontFamily="@font/nightr"
        android:textColor="#52444443"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:layout_below="@+id/free_bbs_img"
        android:id="@+id/free_bbs_time"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="|"
        android:id="@+id/l"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nightr"
        android:textColor="#52444443"
        android:layout_toRightOf="@+id/free_bbs_time"
        android:layout_below="@+id/free_bbs_img"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="글쓴이"
        android:textSize="12dp"
        android:textColor="#52444443"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nightr"
        android:layout_toRightOf="@+id/l"
        android:layout_below="@+id/free_bbs_img"
        android:id="@+id/free_bbs_name"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/free_bbs_img"
        android:layout_alignParentRight="true">


    <ImageView
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_toRightOf="@+id/free_bbs_name"
        android:layout_marginTop="8dp"
        android:layout_marginStart="50dp"
        android:id="@+id/free_bbs_ic1"
        android:src="@drawable/ic_bone"
        android:layout_below="@id/free_bbs_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13"
        android:textSize="12dp"
        android:textColor="#52444443"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/nightr"
        android:layout_toRightOf="@+id/free_bbs_ic1"
        android:layout_below="@+id/free_bbs_content"
        android:id="@+id/free_bbs_count1"></TextView>
    <ImageView
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_toRightOf="@+id/free_bbs_count1"
        android:layout_marginTop="8dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_check"
        android:id="@+id/free_bbs_ic2"
        android:layout_below="@id/free_bbs_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13"
        android:textSize="12dp"
        android:textColor="#52444443"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/nightr"
        android:layout_toRightOf="@+id/free_bbs_ic2"
        android:layout_below="@+id/free_bbs_content"
        android:id="@+id/free_bbs_count2"/>
    <ImageView
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_toRightOf="@+id/free_bbs_count2"
        android:layout_marginTop="8dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_bone"
        android:id="@+id/free_bbs_ic3"
        android:layout_below="@id/free_bbs_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13"
        android:textSize="12dp"
        android:textColor="#52444443"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/nightr"
        android:layout_toRightOf="@+id/free_bbs_ic3"
        android:layout_below="@+id/free_bbs_content"
        android:id="@+id/free_bbs_count3"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F8F8F7"
        android:layout_margin="4dp"
        android:padding="1dp"
        android:layout_alignParentBottom="true"></TextView>


</RelativeLayout>