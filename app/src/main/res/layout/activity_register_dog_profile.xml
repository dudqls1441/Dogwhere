<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterDogProfileActivity">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:id="@+id/btn_back"
            android:background="@drawable/btn_round"
            android:padding="8dp"
            android:text="뒤로"></Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:fontFamily="@font/sebanggothic"
            android:text="반려견 프로필 등록"
            android:textSize="35dp"
            android:textStyle="bold"></TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:layout_below="@id/top_layout">
        <ImageView
            android:id="@+id/DogProfilePhoto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/ic_perm_identity"></ImageView>


        <TextView
            android:id="@+id/dogname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_below="@+id/DogProfilePhoto"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/sebanggothic"
            android:text="이름"
            android:textSize="20dp">

        </TextView>

        <EditText
            android:id="@+id/dogprofilename"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dogname"
            android:hint="닉네임을 입력해주세요"
            android:layout_marginRight="30dp"
            android:background="@drawable/edittext_round"></EditText>



        <TextView
            android:id="@+id/dogbreed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_below="@+id/dogprofilename"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/sebanggothic"
            android:text="견종"
            android:textSize="20dp">

        </TextView>

        <EditText
            android:id="@+id/dogprofilebreed"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dogbreed"
            android:hint="견종을 입력해주세요"
            android:layout_marginRight="30dp"
            android:background="@drawable/edittext_round"></EditText>


        <TextView
            android:id="@+id/textbox_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_below="@+id/dogprofilebreed"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/sebanggothic"
            android:layout_marginRight="20dp"
            android:text="나이"
            android:textSize="20dp"></TextView>


        <EditText
            android:id="@+id/dogprofileage"
            android:layout_width="100dp"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textbox_age"
            android:hint="0"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:background="@drawable/edittext_round"></EditText>

        <TextView
            android:id="@+id/textbox_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_below="@+id/dogprofileage"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:text="성별"
            android:textSize="20dp">

        </TextView>



        <RadioGroup
            android:id="@+id/dogprofilesex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textbox_sex"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/sex_male"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#5BD560"
                android:layout_weight="1"
                android:text="수컷"></RadioButton>

            <RadioButton
                android:id="@+id/sex_female"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#5BD560"
                android:layout_weight="1"
                android:text="암컷"></RadioButton>

        </RadioGroup>


        <TextView
            android:id="@+id/textbox_neutralization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_below="@+id/dogprofilesex"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:text="중성화 여부"
            android:textSize="20dp">

        </TextView>



        <RadioGroup
            android:id="@+id/dogpprofileneutralization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textbox_neutralization"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/neutralization_T"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#5BD560"
                android:layout_weight="1"
                android:text="예"></RadioButton>

            <RadioButton
                android:id="@+id/neutralization_F"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#5BD560"
                android:layout_weight="1"
                android:text="아니요"></RadioButton>

        </RadioGroup>

    </RelativeLayout>


    <Button
        android:id="@+id/adddog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_upload"
        android:background="#00C09F"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:text="강아지 추가하기"></Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="등록"
        android:id="@+id/btn_upload"
        android:layout_alignParentBottom="true"
        android:background="#00C09F"></Button>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/example"
        android:layout_below="@+id/adddog"
        android:layout_above="@+id/btn_upload"></RelativeLayout>


</RelativeLayout>