<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Walk_Calendar">
    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">
        <Button
            android:layout_marginTop="40dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="뒤로"
            android:fontFamily="@font/sebanggothic"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft= "true"
            android:id="@+id/btn_back"
            android:background="@drawable/btn_round"
            android:textSize="12dp"></Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sebanggothic"
            android:text="산책 캘린더"
            android:textColor="@color/main_gray"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="..."
            android:fontFamily="@font/sebanggothic"
            android:textColor="@color/white"
            android:background="@drawable/btn_round"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight = "true"
            android:id="@+id/btn_add"
            android:layout_marginTop="40dp"
            android:textSize="12dp"></Button>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_middle"
        android:layout_below="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="380dp">
    <CalendarView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/calendar"></CalendarView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_below="@+id/layout_middle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:textColor="@color/main_gray"
        android:fontFamily="@font/sebanggothic"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/main_gray"
        android:fontFamily="@font/sebanggothic"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/month"
        android:text="월 통계"></TextView>
    <TextView
        android:id="@+id/a"
        android:layout_below="@+id/month"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간                                                 거리"
        android:textSize="14dp"
        android:textColor="@color/main_mint"/>
    <TextView
        android:id="@+id/time"
        android:layout_below="@+id/a"
        android:layout_marginLeft="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36dp"
        android:textStyle="bold"
        android:text="14:01:02"
        android:textColor="@color/main_mint"/>
    <TextView
        android:layout_below="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:text="10km"
        android:textColor="@color/main_mint"
        android:textSize="36dp"/>
    <TextView
        android:id="@+id/line1"
        android:layout_width="350dp"
        android:layout_height="0.5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="158dp"
        android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/date"
            android:background="@color/main_gray" />

    <TextView
        android:id="@+id/message"
        android:layout_below="@id/line1"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지난달 보다"
        android:textSize="14dp"
        android:textColor="@color/main_gray"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/message1"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="14dp"
        android:layout_marginBottom="48dp"
        android:text="5분 많이, 0.2km 적게 산책하였어요"
        android:textColor="@color/main_gray" />
    </RelativeLayout>


</RelativeLayout>