<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/imformation_bbs_item"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_margin="20dp"
    android:background="#ffffff">

    <TextView
        android:id="@+id/imformation_bbs_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="150dp"
        android:fontFamily="@font/r210beachofnight"
        android:padding="8dp"
        android:text="게시판 제목"
        android:textSize="20dp"
        android:textStyle="bold"></TextView>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/selected_woman"
        android:id="@+id/transaction_bbs_img"
        android:layout_margin="4dp"
        android:layout_alignParentRight="true"></ImageView>

    <TextView
        android:id="@+id/imformation_bbs_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imformation_bbs_title"
        android:autoSizeMaxTextSize="80dp"
        android:fontFamily="@font/r210beachofnight"
        android:padding="8dp"
        android:text="가격"
        android:textSize="18dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/imformation_bbs_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imformation_bbs_price"
        android:fontFamily="@font/r210beachofnight"
        android:maxWidth="300dp"
        android:padding="10dp"
        android:text="게시판 내용입니다. 게시판 내용입니다."
        android:textSize="15dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/imformation_bbs_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imformation_bbs_content"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/r210beachofnight"
        android:padding="8dp"
        android:text="몇 분 전"
        android:textStyle="bold"></TextView>

    <TextView
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:background="#000000"
        android:id="@+id/l"
        android:layout_margin="4dp"
        android:layout_toRightOf="@+id/imformation_bbs_time"
        android:layout_below="@+id/imformation_bbs_content"></TextView>

    <TextView
        android:id="@+id/imformation_bbs_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imformation_bbs_content"
        android:layout_toRightOf="@+id/l"
        android:fontFamily="@font/r210beachofnight"
        android:padding="8dp"
        android:text="글쓴이"
        android:textStyle="bold"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A3A3A3"
        android:layout_margin="4dp"
        android:padding="1dp"
        android:layout_alignParentBottom="true"></TextView>x


</RelativeLayout>