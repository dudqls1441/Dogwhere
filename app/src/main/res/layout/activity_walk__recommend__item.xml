<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="120dp"
        android:layout_marginStart="12dp">

        <RelativeLayout
            android:layout_width="220dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_round_mint2">

            <TextView
                android:id="@+id/recommend_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/nanumsquarer"
                android:text="제목이 들어가는 자리"
                android:textSize="16dp" />

            <LinearLayout
                android:id="@+id/a1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                android:layout_below="@+id/recommend_title"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/recommend_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquarel"
                    android:layout_marginTop="2dp"
                    android:text="주소정보"
                    android:textColor="@color/main_gray"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/recommend_place_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/recommend_place"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/nanumsquarel"
                    android:text="상세주소"
                    android:textColor="@color/main_gray"
                    android:textSize="12dp" />



                <TextView
                    android:id="@+id/recommend_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquarel"
                    android:layout_marginTop="2dp"
                    android:text="날짜"
                    android:textColor="@color/main_gray"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/recommend_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/recommend_date"
                    android:fontFamily="@font/nanumsquarel"
                    android:text="시간"
                    android:textColor="@color/main_gray"
                    android:textSize="12dp" />
            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>