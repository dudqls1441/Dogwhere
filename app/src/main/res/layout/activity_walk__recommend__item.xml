<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="140dp">
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_width="240dp"
            android:layout_height="130dp"
            android:background="@drawable/btn_round_mint">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recommend_title"
            android:text="제목이 들어가는 자리"
            android:fontFamily="@font/nanumsquareb"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="20dp"/>
            <RelativeLayout
                android:id="@+id/a1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recommend_title"
                android:layout_marginTop="22dp"
                android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recommend_place"
            android:text="주소정보"
            android:textSize="16dp"
            android:fontFamily="@font/nanumsquareb"
            android:textColor="@color/main_gray"/>
            <TextView
                android:id="@+id/recommend_place_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/recommend_place"
                android:text="상세주소"
                android:layout_marginLeft="3dp"
                android:textSize="16dp"
                android:textColor="@color/main_gray"
                android:fontFamily="@font/nanumsquareb" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/a1"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/recommend_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="날짜"
                android:textSize="16dp"
                android:textColor="@color/main_gray"
                android:fontFamily="@font/nanumsquareb" />
            <TextView
                android:id="@+id/recommend_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/recommend_date"
                android:text="시간"
                android:textSize="16dp"
                android:layout_marginLeft="3dp"
                android:textColor="@color/main_gray"
                android:fontFamily="@font/nanumsquareb" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>