                    android:layout_width="380dp"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/walkgoal_backgroundbox">

                    <TextView
                        android:id="@+id/reset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="21dp"
                        android:text="06월 13일에 리셋"
                        android:textColor="@color/main_gray"
                        android:textSize="12dp" />


                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/reset"
                        android:layout_marginLeft="21dp"
                        android:text="일주일에 "
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text"
                        android:layout_marginLeft="21dp"
                        android:text="5번씩"
                        android:textColor="@color/main_yellow"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text"
                        android:layout_toRightOf="@id/count"
                        android:text=" 7시간"
                        android:textColor="@color/main_yellow"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text"
                        android:layout_toRightOf="@id/hour"
                        android:text=" 산책하기"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="24dp" />

                    <ImageView
                        android:id="@+id/bone1"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_below="@+id/hour"
                        android:layout_marginLeft="21dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/ic_bone_full"></ImageView>

                    <ImageView
                        android:id="@+id/bone2"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_below="@+id/hour"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="12dp"
                        android:layout_toRightOf="@+id/bone1"
                        android:src="@drawable/ic_bone_full"></ImageView>

                    <ImageView
                        android:id="@+id/bone3"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_below="@+id/hour"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="12dp"
                        android:layout_toRightOf="@+id/bone2"
                        android:src="@drawable/ic_bone_full"></ImageView>

                    <ImageView
                        android:id="@+id/bone4"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_below="@+id/hour"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="12dp"
                        android:layout_toRightOf="@+id/bone3"
                        android:src="@drawable/ic_bone"></ImageView>

                    <ImageView
                        android:id="@+id/bone5"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_below="@+id/hour"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="12dp"
                        android:layout_toRightOf="@+id/bone4"
                        android:src="@drawable/ic_bone"></ImageView>

                    <ImageView
                        android:id="@+id/rectangle"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bone5"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="17dp"
                        android:background="@drawable/gauge" />


                </RelativeLayout>
            </RelativeLayout>


