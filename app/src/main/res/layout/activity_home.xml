<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3E3E3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/menuBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_g_hamburger"></ImageView>

            <ImageView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_splash"
                android:textColor="#BD3131"
                android:textStyle="bold"></ImageView>

            <ImageView
                android:id="@+id/btn_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_g_notice"></ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/scrollLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_below="@+id/layout_top">

            <ScrollView
                android:id="@+id/scrollvieww"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="vertical">

                <RelativeLayout
                    android:id="@+id/InscrollLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:id="@+id/frame_weather"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/main_mint">


                    </FrameLayout>

                    <RelativeLayout
                        android:id="@+id/layout_walk_habit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/frame_weather"
                        android:layout_marginTop="5dp"
                        android:background="@color/white">

                        <RelativeLayout
                            android:id="@+id/layout_walk"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp">

                            <TextView
                                android:id="@+id/b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanumsquareb"
                                android:text="산책습관"
                                android:textColor="@color/main_mint"
                                android:textSize="21dp"></TextView>

                            <TextView
                                android:id="@+id/bb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/b"
                                android:fontFamily="@font/nanumsquareb"
                                android:text="을 점검해보세요"
                                android:textColor="@color/main_gray"
                                android:textSize="21dp"></TextView>
                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/goal"
                            android:layout_width="380dp"
                            android:layout_height="200dp"
                            android:layout_below="@+id/layout_walk"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="14dp"
                            android:layout_marginBottom="14dp"
                            android:background="@drawable/walkgoal_backgroundbox">

                            <TextView
                                android:id="@+id/reset"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="25dp"
                                android:layout_marginRight="21dp"
                                android:text="06월 13일에 리셋"
                                android:textColor="@color/main_gray"
                                android:textSize="12dp" />


                            <TextView
                                android:id="@+id/text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/reset"
                                android:layout_marginLeft="21dp"
                                android:text="일주일에 "
                                android:textColor="@color/cardview_dark_background"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text"
                                android:layout_marginLeft="21dp"
                                android:text="5번씩"
                                android:textColor="@color/main_yellow"
                                android:textSize="24dp" />

                            <TextView
                                android:id="@+id/hour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text"
                                android:layout_toRightOf="@id/count"
                                android:text=" 7시간"
                                android:textColor="@color/main_yellow"
                                android:textSize="24dp" />

                            <TextView
                                android:id="@+id/text2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text"
                                android:layout_toRightOf="@id/hour"
                                android:text=" 산책하기"
                                android:textColor="@color/cardview_dark_background"
                                android:textSize="24dp" />

                            <ImageView
                                android:id="@+id/bone1"
                                android:layout_width="40dp"
                                android:layout_height="25dp"
                                android:layout_below="@+id/hour"
                                android:layout_marginLeft="21dp"
                                android:layout_marginTop="12dp"
                                android:src="@drawable/ic_bone_full"></ImageView>

                            <ImageView
                                android:id="@+id/bone2"
                                android:layout_width="40dp"
                                android:layout_height="25dp"
                                android:layout_below="@+id/hour"
                                android:layout_marginLeft="6dp"
                                android:layout_marginTop="12dp"
                                android:layout_toRightOf="@+id/bone1"
                                android:src="@drawable/ic_bone_full"></ImageView>

                            <ImageView
                                android:id="@+id/bone3"
                                android:layout_width="40dp"
                                android:layout_height="25dp"
                                android:layout_below="@+id/hour"
                                android:layout_marginLeft="6dp"
                                android:layout_marginTop="12dp"
                                android:layout_toRightOf="@+id/bone2"
                                android:src="@drawable/ic_bone_full"></ImageView>

                            <ImageView
                                android:id="@+id/bone4"
                                android:layout_width="40dp"
                                android:layout_height="25dp"
                                android:layout_below="@+id/hour"
                                android:layout_marginLeft="6dp"
                                android:layout_marginTop="12dp"
                                android:layout_toRightOf="@+id/bone3"
                                android:src="@drawable/ic_bone"></ImageView>

                            <ImageView
                                android:id="@+id/bone5"
                                android:layout_width="40dp"
                                android:layout_height="25dp"
                                android:layout_below="@+id/hour"
                                android:layout_marginLeft="6dp"
                                android:layout_marginTop="12dp"
                                android:layout_toRightOf="@+id/bone4"
                                android:src="@drawable/ic_bone"></ImageView>

                            <ImageView
                                android:id="@+id/rectangle"
                                android:layout_width="330dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/bone5"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="17dp"
                                android:background="@drawable/gauge" />


                        </RelativeLayout>
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/layout_hot_bbs"
                        android:layout_width="match_parent"
                        android:layout_height="290dp"
                        android:layout_below="@+id/layout_walk_habit"
                        android:layout_marginTop="6dp"
                        android:background="@color/white">

                        <RelativeLayout
                            android:id="@+id/layout_hot_bbs_top_message"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp">

                            <TextView
                                android:id="@+id/text_today"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/nanumsquareb"
                                android:gravity="center_vertical"
                                android:text="오늘의"
                                android:textSize="21dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/text_hot_bbs"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@id/text_today"
                                android:fontFamily="@font/nanumsquareb"
                                android:gravity="center_vertical"
                                android:text=" 핫 게시글"
                                android:textColor="@color/main_mint"
                                android:textSize="21dp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerview_hot_bbs"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/layout_hot_bbs_top_message"
                            android:layout_marginTop="10dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:itemCount="2">

                        </androidx.recyclerview.widget.RecyclerView>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_matching_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_hot_bbs"
                        android:layout_marginTop="6dp"
                        android:background="@color/white">

                        <RelativeLayout
                            android:id="@+id/layout_matching"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp">

                            <TextView
                                android:id="@+id/text_work1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sebanggothic"
                                android:text="현재 주소"
                                android:textColor="@color/main_mint"
                                android:textSize="20dp"></TextView>

                            <TextView
                                android:id="@+id/text_work2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@+id/text_work1"
                                android:fontFamily="@font/sebanggothic"
                                android:text="산책 모임"
                                android:textColor="@color/main_mint"
                                android:textSize="20dp"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/text_work2"
                                android:fontFamily="@font/sebanggothic"
                                android:text="에 참여해보세요"
                                android:textColor="@color/main_gray"
                                android:textSize="20dp"></TextView>

                            <TextView
                                android:id="@+id/full"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="21dp"
                                android:text="전체 보기>"
                                android:textColor="@color/main_gray"
                                android:textSize="12dp" />
                        </RelativeLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerview_recommendation_walk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/layout_matching"
                            android:layout_alignStart="@+id/layout_matching"
                            android:orientation="horizontal"
                            android:paddingTop="8dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

                        </androidx.recyclerview.widget.RecyclerView>
                    </RelativeLayout>
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/naviView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        app:headerLayout="@layout/navi_header"
        app:menu="@menu/drawer_navigation">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
