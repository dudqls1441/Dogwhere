<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".UserProfileFragment">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@drawable/backgroundbox"
    android:layout_margin="30dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="견종"
        android:id="@+id/dogbreed"
        android:fontFamily="@font/r210beachofnight"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="24dp"
        android:textSize="16dp"
        android:layout_alignParentBottom="true"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나이"
        android:id="@+id/dogage"
        android:layout_marginLeft="8dp"
        android:layout_above="@+id/dogbreed"
        android:layout_toRightOf="@+id/dogbreed"
        android:fontFamily="@font/r210beachofnight"
        android:layout_marginBottom="24dp"
        android:textSize="16dp"
        android:layout_alignParentBottom="true"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별"
        android:id="@+id/dogsex"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/dogage"
        android:fontFamily="@font/r210beachofnight"
        android:layout_marginBottom="24dp"
        android:textSize="16dp"
        android:layout_alignParentBottom="true"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="중성화여부"
        android:id="@+id/dogneutralization"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/dogsex"
        android:fontFamily="@font/r210beachofnight"
        android:layout_marginBottom="24dp"
        android:textSize="16dp"
        android:layout_alignParentBottom="true"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:id="@+id/dogname"
        android:layout_above="@+id/dogbreed"
        android:fontFamily="@font/r210beachofnight"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="8dp"
        android:textSize="20dp"></TextView>


</RelativeLayout>



</FrameLayout>