                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textSize="16dp"
                    android:paddingStart="20dp"
                    android:gravity="center_vertical"
                    android:text="경북"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textSize="16dp"
                    android:paddingStart="20dp"
                    android:gravity="center_vertical"
                    android:text="울산"/>
