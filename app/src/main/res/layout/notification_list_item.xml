<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:background="@color/white"
    android:layout_height="70dp">


    <TextView
        android:id="@+id/notification_Topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumsquarer"
        android:paddingLeft="16dp"
        android:text="매칭 참가"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/notification_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notification_Topic"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/nanumsquarer"
        android:lineSpacingExtra="2dp"
        android:maxWidth="300dp"
        android:paddingLeft="16dp"
        android:text="사용자"
        android:textColor="#979797"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/notification_message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notification_Topic"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/nanumsquarer"
        android:lineSpacingExtra="2dp"
        android:maxWidth="300dp"
        android:layout_toRightOf="@+id/notification_username"
        android:text="님께서 매칭에 참가하셨습니다."
        android:textColor="#979797"
        android:textSize="12dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1분 전"
        android:fontFamily="@font/sebanggothic"
        android:textSize="12dp"
        android:id="@+id/notification_list_time"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="#80979797"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F8F8F7"
        android:padding="1dp"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>