<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/walk_Weather_fragment"
    tools:context=".GpsActivity">

    <RelativeLayout
        android:id="@+id/walk_Weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_mint">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/walk_background" />

        <TextView
            android:id="@+id/textt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nanumsquareb"
            android:text="오늘의 산책지수"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/text_weather_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textt"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nanumsquarer"
            android:text=""
            android:textColor="@color/white"
            android:textSize="12dp" />

        <LinearLayout
            android:id="@+id/linear_weather_index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/text_weather_area">
            <TextView
                android:id="@+id/textt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:fontFamily="@font/nanumsquarer"
                android:text="날씨"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/text_weather_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquareb"
                android:layout_gravity="center"
                android:text="       "
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_weather_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_weather_area"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/text_weather_index"
                android:background="@drawable/ic_bad" />

        </LinearLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_weather_index"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/finedust_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_finedust" />

            <TextView
                android:id="@+id/finedust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/finedust_ic"
                android:fontFamily="@font/nanumsquarer"
                android:text="미세먼지"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/text_weather_dust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/finedust"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/finedust_ic"
                android:fontFamily="@font/nanumsquarer"
                android:text="       "
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_weather_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/finedust_ic"
                android:background="@drawable/ic_precipitation" />

            <TextView
                android:id="@+id/precipitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/img_weather_weather"
                android:fontFamily="@font/nanumsquarer"
                android:text="강수확률"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/text_weather_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/precipitation"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/img_weather_weather"
                android:fontFamily="@font/nanumsquarer"
                android:text="       "
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/temperature_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img_weather_weather"
                android:background="@drawable/ic_teperature" />

            <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/temperature_ic"
                android:fontFamily="@font/nanumsquarer"
                android:text="온도"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/text_weather_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/temperature"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/temperature_ic"
                android:fontFamily="@font/nanumsquarer"
                android:text="       "
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>


</FrameLayout>