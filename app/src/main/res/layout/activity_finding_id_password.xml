<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Finding_Id_Password">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/finding_id_pw_top_layout"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft= "true"
            android:id="@+id/btn_back"
            android:background="@color/white"
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디/비밀번호 찾기"
            android:fontFamily="@font/sebanggothic"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#00C09F"></TextView>

    </RelativeLayout>
    <com.google.android.material.tabs.TabLayout
        android:layout_below="@+id/finding_id_pw_top_layout"
        android:layout_width="match_parent"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabMaxWidth="0dp"
        app:tabTextColor="#979797"
        app:tabSelectedTextColor="#00C09F"
        app:tabIndicatorColor="#00C09F"
        android:layout_height="wrap_content"
        android:id="@+id/finding_id_pw_tab_layout">

    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager.widget.ViewPager
        android:layout_below="@+id/finding_id_pw_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/finding_id_pw_pager">

    </androidx.viewpager.widget.ViewPager>

</RelativeLayout>