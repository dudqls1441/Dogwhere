<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MatchingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/layout_top"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="산책모임 매칭"
            android:fontFamily="@font/sebanggothic"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:textColor="#00C09F"></TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_top"
        android:layout_above="@+id/bottom_bar">

        <FrameLayout
            android:name="com.example.dogwhere.matchingfragment"
            android:id="@+id/matchingFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/bottom_bar"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/layout_home"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_margin="4dp"
                android:id="@+id/text_home"
                android:background="@drawable/bottombutton"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/btn_home"
                android:layout_height="match_parent"
                android:layout_below="@+id/text_home"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="홈"
                android:textColor="#000000"
                android:textSize="14dp"></TextView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/layout_work"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_margin="4dp"
                android:id="@+id/text_work"
                android:background="@drawable/bottombutton"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/btn_work"
                android:layout_height="match_parent"
                android:layout_below="@+id/text_work"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="산책"
                android:textColor="#000000"
                android:textSize="14dp"></TextView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/layout_matching"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_margin="4dp"
                android:id="@+id/text_matching"
                android:background="@drawable/bottomclickedbutton"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/btn_matching"
                android:layout_height="match_parent"
                android:layout_below="@+id/text_matching"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="매칭"
                android:textColor="#00C09F"
                android:textSize="14dp"></TextView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/layout_post"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_margin="4dp"
                android:id="@+id/text_post"
                android:background="@drawable/bottombutton"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/btn_post"
                android:layout_height="match_parent"
                android:layout_below="@+id/text_post"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="게시판"
                android:textColor="#000000"
                android:textSize="14dp"></TextView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/layout_chatting"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_margin="4dp"
                android:id="@+id/text_chatting"
                android:background="@drawable/bottombutton"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/btn_chatting"
                android:layout_height="match_parent"
                android:layout_below="@+id/text_chatting"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="채팅"
                android:textColor="#000000"
                android:textSize="14dp"></TextView>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>