<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WalkActivity">
    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:text="산책 캘린더"
            android:id="@+id/walk_calendar"
            android:layout_marginTop="40dp"
            android:textSize="18dp"
            android:fontFamily="@font/sebanggothic"
            android:textColor="@color/main_mint"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/main_mint">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/workindex_title"
            android:text="오늘의 산책지수"
            android:textColor="#ffffff"
            android:fontFamily="@font/sebanggothic"
            android:padding="16dp"
            android:textStyle="bold"
            android:textSize="30dp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인천시 부평구"
            android:fontFamily="@font/sebanggothic"
            android:textColor="#ffffff"
            android:id="@+id/area_text"
            android:layout_below="@+id/workindex_title"
            android:paddingLeft="16dp"
            android:textSize="24dp"></TextView>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/workindex_img"
            android:src="@drawable/selected_woman"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:layout_centerInParent="true">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="산책지수"
            android:textSize="24dp"
            android:id="@+id/workindex_context"
            android:fontFamily="@font/sebanggothic"
            android:textColor="#ffffff"
            android:layout_below="@+id/workindex_img"
            android:layout_centerHorizontal="true"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:id="@+id/layout_state"
            android:background="@color/main_mint"
            android:gravity="center"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="미세먼지"
                    android:fontFamily="@font/sebanggothic"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:gravity="center"></TextView>
                <TextView
                    android:id="@+id/dust_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상태"
                    android:fontFamily="@font/sebanggothic"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:gravity="center"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="날씨"
                    android:fontFamily="@font/sebanggothic"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:gravity="center"></TextView>
                <TextView
                    android:id="@+id/weather_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상태"
                    android:fontFamily="@font/sebanggothic"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:gravity="center"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="온도"
                    android:fontFamily="@font/sebanggothic"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:gravity="center"></TextView>
                <TextView
                    android:id="@+id/temp_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상태"
                    android:fontFamily="@font/sebanggothic"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:gravity="center"></TextView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_stopwatch"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/bottom_bar"
        android:layout_margin="20dp"
        android:background="@drawable/btn_round_yello"
        android:gravity="center"
        android:text="스톱워치"
        android:textColor="@color/white"
        android:textSize="25dp"></Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/bottom_bar"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/layout_home_inwalk"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_margin="4dp"
                android:id="@+id/text_home"
                android:background="@drawable/bottombutton"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/btn_home"
                android:layout_height="match_parent"
                android:layout_below="@+id/text_home"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="홈"
                android:textSize="14dp"></TextView>w

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/layout_work_inwalk"
            android:layout_weight="1">
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_margin="4dp"
                android:id="@+id/text_work"
                android:background="@drawable/bottomclickedbutton"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/btn_work"
                android:layout_height="match_parent"
                android:layout_below="@+id/text_work"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="산책"
                android:textColor="#00C09F"
                android:textSize="14dp"></TextView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/layout_matching_inwalk"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_margin="4dp"
                android:id="@+id/text_matching"
                android:background="@drawable/bottombutton"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/btn_matching"
                android:layout_height="match_parent"
                android:layout_below="@+id/text_matching"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="매칭"
                android:textColor="#000000"
                android:textSize="14dp"></TextView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/layout_post_inwalk"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_margin="4dp"
                android:id="@+id/text_post"
                android:background="@drawable/bottombutton"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/btn_post"
                android:layout_height="match_parent"
                android:layout_below="@+id/text_post"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="게시판"
                android:textColor="#000000"
                android:textSize="14dp"></TextView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/layout_chatting_inwalk"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_margin="4dp"
                android:id="@+id/text_chatting"
                android:background="@drawable/bottombutton"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/btn_chatting"
                android:layout_height="match_parent"
                android:layout_below="@+id/text_chatting"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="채팅"
                android:textColor="#000000"
                android:textSize="14dp"></TextView>

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>