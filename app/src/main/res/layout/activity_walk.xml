<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/layout_top"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="산책"
                android:fontFamily="@font/nightb"
                android:textSize="18dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:textColor="#00C09F"></TextView>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/scrollLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_top">

<!--            <ScrollView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:fillViewport="true"-->
<!--                android:scrollbars="vertical">-->

                <RelativeLayout
                    android:id="@+id/layout_middle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/main_mint">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/walk_background" />

                    <RelativeLayout
                        android:id="@+id/goal"
                        android:layout_width="355dp"
                        android:layout_height="380dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="28dp"
                        android:background="@drawable/walkgoal_backgroundbox">

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="21dp"
                            android:layout_marginTop="25dp"
                            android:textColor="@color/main_gray"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/setting1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="25dp"
                            android:layout_marginRight="21dp"
                            android:text="목표 설정하기>"
                            android:textColor="@color/main_gray"
                            android:textSize="12dp"
                            android:visibility="invisible"/>
                        <TextView
                            android:id="@+id/setting2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="25dp"
                            android:layout_marginRight="21dp"
                            android:text="목표 수정하기>"
                            android:textColor="@color/main_gray"
                            android:textSize="12dp"
                            android:visibility="invisible"/>
                        <RelativeLayout
                            android:id="@+id/write"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/date"
                            android:visibility="invisible">
                            <TextView
                                android:id="@+id/t"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="21dp"
                                android:layout_marginTop="25dp"
                                android:text="산책 목표를 "
                                android:textColor="@color/cardview_dark_background"
                                android:textSize="20dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/t"
                                android:layout_marginLeft="21dp"
                                android:text="설정해보세요"
                                android:textColor="@color/main_yellow"
                                android:textSize="24dp" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/write2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/date"
                            android:visibility="invisible">
                            <TextView
                                android:id="@+id/text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="21dp"
                                android:layout_marginTop="25dp"
                                android:text="일주일에 "
                                android:textColor="@color/cardview_dark_background"
                                android:textSize="24dp" />

                            <TextView
                                android:id="@+id/goal_day"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text"
                                android:layout_marginLeft="21dp"
                                android:text=""
                                android:textColor="@color/main_yellow"
                                android:textSize="24dp" />

                            <TextView
                                android:id="@+id/minute"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text"
                                android:layout_toRightOf="@id/goal_day"
                                android:text=""
                                android:textColor="@color/main_yellow"
                                android:textSize="24dp" />
                            <TextView
                                android:id="@+id/km"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text"
                                android:layout_toRightOf="@id/minute"
                                android:text=""
                                android:textColor="@color/main_yellow"
                                android:textSize="24dp" />

                            <TextView
                                android:id="@+id/text2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text"
                                android:layout_toRightOf="@id/km"
                                android:text=" 산책하기"
                                android:textColor="@color/cardview_dark_background"
                                android:textSize="24dp" />
                        </RelativeLayout>

                        <RatingBar
                            android:layout_below="@+id/write"
                            android:layout_marginTop="30dp"
                            android:layout_marginLeft="21dp"
                            android:id="@+id/rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RelativeLayout
                            android:id="@+id/goal_"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/calendar"
                            android:layout_below="@+id/rating"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="36dp">


                            <RelativeLayout
                                android:id="@+id/b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/a"
                                android:layout_centerHorizontal="true">

                                <TextView
                                    android:id="@+id/hour_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2번 중 "
                                    android:textColor="@color/main_gray"
                                    android:textSize="16dp" />

                                <TextView
                                    android:id="@+id/hour_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/hour_1"
                                    android:text="1번 "
                                    android:textColor="@color/main_mint"
                                    android:textSize="16dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/hour_2"
                                    android:text="산책했어요"
                                    android:textColor="@color/main_gray"
                                    android:textSize="16dp" />
                            </RelativeLayout>

                        </RelativeLayout>

                        <Button
                            android:id="@+id/calendar"
                            android:layout_width="310dp"
                            android:layout_height="50dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="28dp"
                            android:background="@drawable/btn_round_mint"
                            android:text="캘린더로 이동하기"
                            android:textColor="@color/main_mint" />


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/goal"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="21dp"
                        android:fontFamily="@font/b210beachofnight"
                        android:text="오늘은 산책 안하시나요?"
                        android:textColor="@color/white"
                        android:textSize="20dp"></TextView>


                    </RelativeLayout>


                </RelativeLayout>
        </RelativeLayout>


        <Button
            android:id="@+id/btn_stopwatch"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            android:background="@drawable/btn_round_yello"
            android:fontFamily="@font/sebanggothic"
            android:gravity="center"
            android:text="산책 시작하기"
            android:textColor="@color/white"
            android:textSize="14dp"></Button>

    </RelativeLayout>
