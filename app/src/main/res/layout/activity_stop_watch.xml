<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Stop_watchActivity">
    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">
        <Button
            android:layout_marginTop="40dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="X"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_round_gray"
            android:layout_alignParentRight = "true"
            android:id="@+id/btn_x"
            android:textSize="12dp"></Button>
    </RelativeLayout>>
    <RelativeLayout
        android:layout_below="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:text="2021.05.30"
        android:id="@+id/date"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="@color/main_gray" />

    <TextView
        android:id="@+id/line1"
        android:layout_width="180dp"
        android:layout_height="1dp"
        android:layout_above="@+id/time_out"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="158dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/date"
        android:background="@color/main_gray" />

    <TextView
        android:id="@+id/time_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_centerHorizontal="true"
        android:textSize="64dp"
        android:textColor="@color/main_gray"
        />

    <TextView
        android:id="@+id/line2"
        android:layout_width="180dp"
        android:layout_height="1dp"
        android:layout_below="@+id/time_out"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="142dp"
        android:layout_marginBottom="5dp"

        android:background="@color/main_gray" />

    <TextView
        android:text="00km"
        android:id="@+id/km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="270dp"
        android:textSize="24dp"
        android:layout_below="@+id/time_out"
        android:textColor="@color/main_gray" />
    <RelativeLayout
        android:id="@+id/box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/km">
        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="산책을 "
            android:textColor="@color/main_gray"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/message_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/message"
            android:text="시작"
            android:textColor="@color/main_mint"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/message_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/message_point"
            android:text="하려면 누르세요"
            android:textColor="@color/main_gray"
            android:textSize="18dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/btn_start"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/box"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/play"
        />
    </RelativeLayout>

</RelativeLayout>